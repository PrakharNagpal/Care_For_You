<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doctorid"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MeetNewDoctor">

    <TextView
        android:id="@+id/Hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="false"
        android:layout_marginTop="143dp"
        android:fontFamily="@font/montserrat"
        android:text="Hi Doctor!"
        android:textColor="#FFFFFF"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Qr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/Hi"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-182dp"
        android:src="@drawable/qrd" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Qr"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-113dp"
        android:fontFamily="@font/montserrat"
        android:text="Robin Jacob here!\nMy Code is:PT123"
        android:textColor="#4E57C7"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="35dp"
        android:textStyle="bold" />
</RelativeLayout>