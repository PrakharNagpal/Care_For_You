<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consultations"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Consultations">

    <TextView
        android:id="@+id/heading"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="110dp"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/montserrat"
        android:text="ROBIN JACOB\nPt. ID:PT123"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4E57C7"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/montserrat"
        android:text="Dr. Smith Phillips"
        android:textColor="#4E57C7"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="25dp" />

    <RatingBar
        android:id="@+id/ratingBar4"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:layout_below="@id/C1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="265dp"
        android:progressTint="#4E57C7"
        android:visibility="visible" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:layout_below="@id/C1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="135dp"
        android:progressTint="#4E57C7"
        android:visibility="visible" />


    <TextView
        android:id="@+id/C1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/I1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/montserrat"
        android:text="Dr. John Phillips"
        android:textColor="#4E57C7"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/C2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="510dp"
        android:fontFamily="@font/montserrat"
        android:text="Dr.Deep John"
        android:textColor="#4E57C7"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="25dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:layout_below="@id/C1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:progressTint="#4E57C7"
        android:visibility="visible" />


</RelativeLayout>




