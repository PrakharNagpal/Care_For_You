<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consult"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Consultations">

    <TextView
        android:id="@+id/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:text="CONSULTATIONS"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="35dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"

        android:background="#3D3838" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="75dp"

        android:background="#0000A0" />


    <ImageView
        android:id="@+id/I1"
        android:layout_width="117dp"
        android:layout_height="68dp"
        android:layout_alignBottom="@+id/h"
        android:layout_marginBottom="-106dp"
        android:src="@drawable/doc" />

    <TextView
        android:id="@+id/C1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/I1"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="20dp"
        android:text="Dr.Kalpana Batra"
        android:textColor="@color/colorAccent"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="25dp" />

    <View
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="179dp"
        android:background="#0000A0" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:layout_below="@id/C1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-17dp"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/I2"
        android:layout_width="117dp"
        android:layout_height="68dp"
        android:layout_alignBottom="@+id/h"
        android:layout_marginBottom="-210dp"
        android:src="@drawable/doc" />

    <TextView
        android:id="@+id/C2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/I2"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="20dp"
        android:text="Dr.Aditi Mehra"
        android:textColor="@color/colorAccent"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="25dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="275dp"
        android:background="#0000A0" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="192dp"
        android:layout_height="44dp"
        android:layout_below="@id/C1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="75dp"
        android:visibility="visible" />


</RelativeLayout>




