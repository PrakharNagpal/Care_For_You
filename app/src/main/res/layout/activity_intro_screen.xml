<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doc"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".IntroScreen">

    <TextView
        android:id="@+id/introname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:text="Hi Prakhar!"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:textSize="35dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="397dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/introname"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-106dp"
        android:text="Meet new Doctor" />

    <Button
        android:id="@+id/button2"
        android:layout_width="397dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-77dp"
        android:text="All Prescriptions" />

    <Button
        android:id="@+id/button3"
        android:layout_width="397dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-87dp"
        android:text="Medicines Given" />

    <Button
        android:id="@+id/button4"
        android:layout_width="397dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-87dp"
        android:text="Consultations" />

    <Button
        android:id="@+id/button5"
        android:layout_width="397dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/button4"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-87dp"
        android:text="Appointments" />

</RelativeLayout>


